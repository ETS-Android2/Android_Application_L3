        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/list_semester_text_view_font"
        android:textSize="25sp"
        app:autoSizeTextType="none"
        tools:ignore="RtlSymmetry" />
</LinearLayout>