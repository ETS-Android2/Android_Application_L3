<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#F1EAED"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expandedListItem"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:background="#F1EAED"
            android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/list_teaching_unit_text_view_font"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <CheckBox
            android:id="@+id/teachinUnitCheckbox"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:background="#F1EAED"
            android:clickable="true"
            android:focusable="true"
            android:onClick="toggleCheckBox"
            android:textColorLink="@color/colorPrimary"
            android:textCursorDrawable="?android:attr/listChoiceIndicatorMultiple" />

    </LinearLayout>

</LinearLayout>